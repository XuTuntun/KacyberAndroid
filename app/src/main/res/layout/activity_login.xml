<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/lggin_header"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/loginpage_banner">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/kacyber" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/login_response"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="21dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/blue_btn_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Sign Up with Your Phone"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="21dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="10"
            android:layout_gravity="center_vertical"
            android:background="#bdbec2"/>

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="OR"
            android:textStyle="bold"
            android:textColor="#bdbec2"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="10"
            android:layout_gravity="center_vertical"
            android:background="#bdbec2"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_facebook_response"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:layout_marginTop="21dp"
        android:gravity="center"
        android:background="@drawable/facebook_btn_bg"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/loginpage_facebook_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In with Facebook"
            android:textColor="@color/white"
            android:layout_marginLeft="12dp"
            android:textSize="21dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_google_response"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:gravity="center"
        android:background="@drawable/google_btn_bg"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/loginpage_google_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In with Google"
            android:textColor="@color/white"
            android:layout_marginLeft="12dp"
            android:textSize="21dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>




    <TextView
        android:id="@+id/login_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:gravity="center"
        android:text="@string/login_description"
        android:textColor="#939398"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/terms_and_conditions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_gravity="bottom|center_horizontal"
        android:gravity="center"
        android:text="@string/terms_and_description"
        android:textColor="#3387ea"
        android:textSize="11dp" />


    <TextView
        android:id="@+id/not_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:gravity="bottom"
        android:text="Not Now"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginBottom="2dp"
        android:textColor="#bdbec2"
        android:visibility="gone"/>


</LinearLayout>