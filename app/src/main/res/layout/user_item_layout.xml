<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginTop="1dp"
    android:background="@color/white">

    <com.kacyber.View.CircleNetworkImageView
        android:id="@+id/user_item_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/chatspage_head_photo_placeholder1"/>


    <LinearLayout
        android:id="@+id/chat_item_text_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/user_item_avatar"
        android:gravity="left|center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:text="Bennet"
            android:textColor="@color/text_6"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/user_item_userid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="UserID: "
            android:textSize="14dp"
            android:textColor="@color/text_6"/>
    </LinearLayout>

    <TextView
        android:id="@+id/user_item_friend"
        android:layout_width="66dp"
        android:layout_height="32dp"
        android:text="Add"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:background="@drawable/blue_btn_bg"/>

</RelativeLayout>