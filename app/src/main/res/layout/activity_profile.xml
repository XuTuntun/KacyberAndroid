<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.kacyber.ActAndFrg.ProfileActivity">

    <RelativeLayout
        android:id="@+id/profile_header"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:id="@+id/normal_chats_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:background="@drawable/chatspage_nav_return_icon"/>

        <TextView
            android:id="@+id/profile_back_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/normal_chats_back"
            android:text="Back"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/chat_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Profile"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/profile_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/profile_header"
        android:orientation="vertical"
        android:background="@color/background_f4">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="10dp"
            android:background="@color/white">

            <com.kacyber.View.CircleNetworkImageView
                android:id="@+id/profile_portrait"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/chatspage_head_photo_placeholder1"/>

            <TextView
                android:id="@+id/profile_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nick Name"
                android:textSize="12dp"
                android:textColor="@color/black_4a"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/profile_portrait"/>

            <ImageView
                android:id="@+id/profile_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/profile_nick"
                android:layout_marginTop="10dp"
                android:background="@drawable/contactspage_females_icon"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Remark Tag"
                android:textSize="14dp"
                android:textColor="@color/text_6"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/person_more"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@color/white"
            android:paddingLeft="16dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:text="Region"
                android:textSize="14dp"
                android:textColor="@color/text_6"/>

            <TextView
                android:id="@+id/profile_region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="81dp"
                android:text="China"
                android:textSize="14dp"
                android:textColor="@color/text_6"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/hint"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingLeft="16dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:text="Album"
                android:textSize="14dp"
                android:textColor="@color/text_6"/>


        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/hint"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@color/white"
            android:paddingLeft="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:text="From"
                android:textSize="14dp"
                android:textColor="@color/text_6"/>

            <TextView
                android:id="@+id/profile_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="81dp"
                android:text="China"
                android:textSize="14dp"
                android:textColor="@color/text_6"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/send_greeting"
            android:layout_height="42dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:text="Send Greeting"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/blue_btn_bg"
            android:layout_marginTop="36dp"/>

        <TextView
            android:layout_height="42dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:text="Report"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/text_9"
            android:gravity="center"
            android:background="@drawable/btn_enable_white"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

</RelativeLayout>
