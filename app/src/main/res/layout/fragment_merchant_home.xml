<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center_horizontal|top"
    android:orientation="vertical"
    tools:context="com.kacyber.ActAndFrg.MerchantHomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal|top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/merchant_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="House of Prime Rib"
            android:textColor="@color/black_4a"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/merchant_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Mediterranean"
            android:textColor="@color/black_4a"
            android:textSize="18dp" />

        <LinearLayout
            android:id="@+id/merchant_review_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/merchant_review_star_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:text="5.0"
                android:textColor="@color/orange"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/review_start_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/discoverpage_star_icon_highlighted" />

            <ImageView
                android:id="@+id/review_start_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/discoverpage_star_icon_highlighted" />

            <ImageView
                android:id="@+id/review_start_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/discoverpage_star_icon_highlighted" />

            <ImageView
                android:id="@+id/review_start_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/discoverpage_star_icon_highlighted" />

            <ImageView
                android:id="@+id/review_start_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/discoverpage_star_icon_highlighted" />

        </LinearLayout>

        <TextView
            android:id="@+id/merchant_best_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="3dp"
            android:text="We are having a party this weekend!"
            android:textColor="@color/black_4a"
            android:textSize="16dp" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/split_e5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/detailspage_phone_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Photos"
                android:textColor="@color/black_4a"
                android:textSize="10dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#dedede" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/detailspage_map_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Map"
                android:textColor="@color/black_4a"
                android:textSize="10dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#dedede" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/detailspage_web_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Website"
                android:textColor="@color/black_4a"
                android:textSize="10dp" />
        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/split_e5" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/home_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Address:"
            android:textColor="@color/black_4a"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/merchant_home_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/home_address"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/home_address"
            android:lines="2"
            android:text="Franz-Josef-StraBe 27, New Town, Salzburg, Austria 5020"
            android:textColor="@color/text_grey_77"
            android:textSize="14dp" />


    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/split_e5" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/home_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Hours:"
            android:textColor="@color/black_4a"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/merchant_home_hours"
            style="@style/mySpinnerItemStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/home_hours"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/home_hours"
            android:entries="@array/merchant_hours"
            android:popupBackground="#ffffff"
            android:spinnerMode="dropdown" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cant_find_looking_for"
            android:layout_height="match_parent"
            android:layout_width="1dp"
            android:layout_weight="3"
            android:gravity="center_vertical|left"
            android:paddingLeft="20dp"
            android:text="Can`t find what your are looking for"
            android:textColor="#8e8e93"
            android:background="#f9f9f9"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/talk_to_us"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:text="Talk to Us"
            android:textStyle="bold"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:background="@color/orange"/>

    </LinearLayout>

</LinearLayout>
